@import "_settings"

body,footer,header, h1, h2, h3, h4, h5, h6, hr, p, blockquote, dl, dt, dd, ul, ol, li, form, fieldset, legend, button, input, textarea, th, td
    margin 0
    padding 0
    font-family "Microsoft Yahei","Helvetica Neue","Helvetica","Lucida Grande","Arial","Hiragino Sans GB","WenQuanYi Micro Hei","sans-serif",arial,sans-serif
	-webkit-text-size-adjust none
	color $bg-color-v6
    
body
    background-color $bg-color-v1
    color $bg-color-v6
    font-size 12px

ul, ol 
    list-style none

a
	text-decoration none
    transition all 0.5s
    -moz-transition all 0.5s
    -webkit-transition all 0.5s
    -o-transition all 0.5s
    cursor pointer
	color: $bg-color-v6
	text-decoration none
input
    outline none

a:hover
    text-decoration underline 
    outline 0 
    color: $main-color

.clear:after
    content "."  
    display block  
    height 0 
    clear both 
    visibility hidden

.clear
     zoom 1